{
  "name": "dvault",
  "version": "0.2.0",
  "description": "Dvault - Premium Cold Wallet with USB Security Key Integration",
  "author": "Dvault Team",
  "private": true,
  "main": "./dist/main/main.js",
  "scripts": {
    "start": "electron .",
    "dev:renderer": "vite",
    "dev:main": "tsc -w",
    "dev": "concurrently \"npm:dev:renderer\" \"npm:dev:main\" \"wait-on http://localhost:5173 && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .\"",
    "build:main": "tsc -p .",
    "build:renderer": "vite build",
    "build": "npm run build:main && npm run build:renderer",
    "build:icon": "node generate-icon.js",
    "build:docker": "docker build -t dvault:latest .",
    "build:all": "npm run build && npm run build:icon",
    "package:win": "cross-env CSC_IDENTITY_AUTO_DISCOVERY=false WIN_CSC_KEY_PASSWORD= WIN_CSC_LINK= electron-builder --win nsis",
    "package:win-portable": "cross-env CSC_IDENTITY_AUTO_DISCOVERY=false WIN_CSC_KEY_PASSWORD= WIN_CSC_LINK= electron-builder --win portable",
    "package:mac": "electron-builder --mac dmg",
    "package:linux": "electron-builder --linux AppImage",
    "docker:build": "docker build -t dvault:latest -t dvault:$(npm pkg get version | tr -d '\"') .",
    "docker:dev": "docker-compose up dvault-dev",
    "docker:prod": "docker-compose up dvault-prod",
    "docker:stop": "docker-compose down",
    "health": "node dist/main/main.js --health",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@types/node": "^20.6.3",
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7",
    "@types/react-router-dom": "^5.3.3",
    "@vitejs/plugin-react": "^4.0.0",
    "concurrently": "^8.0.0",
    "cross-env": "^7.0.0",
    "electron": "^25.0.0",
    "electron-builder": "^26.4.0",
    "jest": "^29.6.1",
    "ts-jest": "^29.1.0",
    "typescript": "^5.1.6",
    "vite": "^5.0.0",
    "wait-on": "^7.0.0"
  },
  "dependencies": {
    "node-hid": "^2.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.14.1"
  },
  "build": {
    "appId": "com.example.dvault",
    "productName": "Dvault",
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "build"
    },
    "win": {
      "target": [
        "portable"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Dvault"
    },
    "mac": {
      "target": [
        "dmg"
      ]
    },
    "publish": [
      {
        "provider": "github"
      }
    ]
  }
}
